<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/android_components_lesson_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:showIn="@layout/activity_lessons">

    <ImageView
        android:id="@+id/artiom_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/mentor_photo"
        app:srcCompat="@drawable/ic_account_circle"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/android_components_lesson_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/artiom_avatar"
        android:text="@string/android_components_theme"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/android_components_lesson_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="64dp"
        android:layout_toEndOf="@id/android_components_lesson_theme"
        android:text="@string/hw_04_03_2019"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/android_components_lesson_mentor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/android_components_lesson_theme"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/artiom_avatar"
        android:text="@string/mentor_artiom"
        android:textStyle="italic" />

</RelativeLayout>
    